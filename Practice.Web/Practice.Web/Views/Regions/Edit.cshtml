@model Practice.Entities.Geographies.Region

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Region</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RegionCode)

        <div class="form-group">
            @Html.LabelFor(model => model.Iso3, "Iso3", htmlAttributes: new { @class = "control-label col-md-2" })
